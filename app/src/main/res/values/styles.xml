<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        ...
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        ...
    </style>
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">38dp</item>
    </style>

    <style name="MyPreference" parent="Theme.AppCompat">
        <item name="title">설정</item>
        <item name="titleTextColor">#0B7697</item>  // title bar text color
        <item name="colorPrimary">#77A5D3</item>    // title bar background color
        <item name="android:colorBackground">#093765</item> // setting screen background

        <item name="colorAccent">#FFFF00</item> // category, switch button color

        <item name="android:textColor">#DFCB32</item>   // key title color
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="colorSecondary">#E4C5C4</item>    //
        <item name="colorPrimarySurface">#5C0606</item>
        // summary color variable not known
    </style>

    <style name="up_down_scroll_thumb">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/up_down</item>
    </style>

</resources>